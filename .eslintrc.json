{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "webextensions": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "browser": "readonly",
        "chrome": "readonly",
        "tf": "readonly",
        "anime": "readonly"
    },
    "rules": {
        "no-console": "warn",
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "prefer-arrow-callback": "error",
        "arrow-spacing": "error",
        "no-duplicate-imports": "error",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ]
    },
    "ignorePatterns": [
        "node_modules/",
        "build/",
        "dist/",
        "*.min.js",
        "browser-polyfill.js"
    ]
}